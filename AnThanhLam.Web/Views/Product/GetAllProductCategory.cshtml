    <option value=""> Chọn loại xe</option>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
          
            <option value=" @item.ID" @(ViewBag.categoryId != null && ViewBag.categoryId == item.ID? "Selected" : "")> @item.Name </option>
        }

    }

</select>
