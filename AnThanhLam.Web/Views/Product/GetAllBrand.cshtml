@model IEnumerable<AnThanhLam.Web.Models.BrandViewModel>


<select class="woof_select woof_select_tire_sizes woof_select_tire_sizes_1" name="bandId" id="bandId" style="display: block">
    <option value=""> Chọn nhãn hiệu</option>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {

            <option value="@item.ID" @(ViewBag.bandId != null && ViewBag.bandId == item.ID ? "Selected" : "")> @item.Name </option>
        }
    }
</select>
