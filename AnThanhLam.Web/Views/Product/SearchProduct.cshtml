    ViewBag.Title = "Kết quả tìm kiếm cho từ khóa " + keyword;
    ViewBag.MetaKeyword = "Kết quả tìm kiếm cho từ khóa " + keyword;
    ViewBag.MetaDescription = "Kết quả tìm kiếm cho từ khóa " + keyword;
    Layout = "~/Views/Shared/Layouts.cshtml";
}


@section footerCSS{

    <link href="~/Assets/client/css/customcss.css" rel="stylesheet" />
}

@section footerJS{

    <script type="text/javascript">
        $(function () {
            var getUrlParameter = function getUrlParameter(sParam) {
                var sPageURL = window.location.search.substring(1),
                    sURLVariables = sPageURL.split('&'),
                    sParameterName,
                    i;

                for (i = 0; i < sURLVariables.length; i++) {
                    sParameterName = sURLVariables[i].split('=');

                    if (sParameterName[0] === sParam) {
                        return typeof sParameterName[1] === undefined ? true : decodeURIComponent(sParameterName[1]);
                    }
                }
                return false;
            };
            var sizeId = getUrlParameter("sizeId");
            if (sizeId) {
                $("#sizeId").val(sizeId);
            }
            var bandId = getUrlParameter("bandId");
            if (bandId) {
                $("#bandId").val(bandId);
            }
            var categoryId = getUrlParameter("categoryId");
            if (categoryId) {
                $("#categoryId").val(categoryId);
            }
        });
    </script>
}

