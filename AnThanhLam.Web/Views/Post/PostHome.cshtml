@model IEnumerable<AnThanhLam.Web.Models.PostViewModel>


<section class="elementor-section elementor-top-section elementor-element elementor-element-ae131b6 elementor-section-boxed elementor-section-height-default elementor-section-height-default" data-id="ae131b6" data-element_type="section">
    <div class="elementor-container elementor-column-gap-default">
        <div class="elementor-row">
            <div class="elementor-column elementor-col-100 elementor-top-column elementor-element elementor-element-3890fb7" data-id="3890fb7" data-element_type="column">
                <div class="elementor-column-wrap elementor-element-populated">
                    <div class="elementor-widget-wrap">
                        <div class="elementor-element elementor-element-c222baa elementor-widget elementor-widget-tz-from-blog" data-id="c222baa" data-element_type="widget" data-widget_type="tz-from-blog.default">
                            <div class="elementor-widget-container">
                                <div class="tz-from-blog img-top" data-owl="container" data-owl-type="content-carousel" data-owl-custom-nav="yes" data-owl-arrows="no" data-owl-dots="" data-owl-autoplay="yes" data-owl-slides="3" data-owl-margin="30">
                                    <div class="title-wrapper">
                                        <h3 class="shortcode-title">
                                            <span>TIN TỨC</span>
                                        </h3>
                                        <div class="slider-navi">
                                            <span class="slider-prev">
                                            </span>
                                            <span class="slider-next">
                                            </span>
                                        </div>
                                    </div>
                                    <span class="carousel-loader" style="display: none">
                                    </span>
                                    <div class="carousel-container columns-3 owl-carousel owl-loaded owl-drag" style="opacity: 1; height: auto">
                                        <div class="owl-stage-outer owl-height" style="height: 454.675px">
                                            <div class="owl-stage" style="transform: translate3d( 0px, 0px, 0px ); transition: all 0s ease 0s; width: 1150px;">
                                                @foreach (var item in Model)
                                                {
                                                    <div class="owl-item active" style="width: 353.333px; margin-right: 30px;">
                                                        <div class="item">
                                                            <div class="thumb-wrapper">
                                                                <img width="384" height="216" src="@Html.Raw(item.Image)" class="attachment-chromium-recent-posts-thumb-top size-chromium-recent-posts-thumb-top wp-post-image" alt="" loading="lazy" srcset="@Html.Raw(item.Image) 384w,  @Html.Raw(item.Image) 640w,  @Html.Raw(item.Image) 1024w" sizes="(max-width: 384px) 100vw, 384px" />
                                                            </div>
                                                            <div class="item-content">
                                                                <a class="post-cat-link" href="/@Html.Raw(item.Alias)" rel="nofollow">@Html.Raw(item.Name)</a>                                                                
                                                                <div class="time-wrapper"> @Html.Raw(item.CreatedDate.Value.ToString("dd/MM/yyyy")) </div>
                                                                <p class="entry-excerpt"> @Html.Raw(item.Description) [...] </p>
                                                                <div class="entry-meta">
                                                                    <a class="link-to-post button" rel="bookmark" href="/@Html.Raw(item.Alias)">Xem thêm</a>
                                                                    <div class="post-views">
                                                                        <i class="chromium-icon-view">
                                                                        </i>286
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                }
                                            </div>
                                        </div>
                                        <div class="owl-nav disabled">
                                            <button type="button" role="presentation" class="owl-prev"></button>
                                            <button type="button" role="presentation" class="owl-next"></button>
                                        </div>
                                        <div class="owl-dots disabled"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

