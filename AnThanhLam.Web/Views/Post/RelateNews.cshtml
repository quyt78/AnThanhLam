@model IEnumerable<AnThanhLam.Web.Models.PostViewModel>

@if (Model.Count() > 0)
{
<div class="fl_other">
    <label>Các tin liên quan</label>
    @foreach (var item in Model)
    {
        <p>
            <i class="fa fa-caret-right"></i>
            <a href="/@Html.Raw(item.Alias)_post-@Html.Raw(item.ID + ".html")" title="@Html.Raw(item.Name)">               
                @Html.Raw(item.Name)
            </a>
        </p>
    }
</div>
}